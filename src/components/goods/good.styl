.goods
    width:100%
    position: absolute
    top:178px
    bottom 46px
    overflow hidden
    display: flex
    .menu-wrapper
        flex: 0 0 80px
        width:80px
        background: #f5f5f5
        .menu-item
            display :table
            height:54px
            width:56px
            line-height :14px
            padding:0px 12px
            &.current
                background:#fff
                position relative
                margin-top:-2px
                & .menu-item-box
                    border-none()
            .menu-item-box
                display :table-cell
                vertical-align :middle
                text-align :center
                border-1px(rgba(7,17,27,0.1))
                & :last-child
                    border-none()
                .goods-text
                    font-size:12px
                    display :table-cell
                    width:56px
                    vertival-align:middle
                .icon
                    display :inline-block
                    width:12px
                    height:12px
                    margin-right:2px
                    background-size:12px 12px
                    background-repeat: no-repeat
                    &.decrease
                        bg-image('decrease_3')
                    &.discount
                        bg-image('discount_3')
                    &.invoice
                        bg-image('invoice_3')
                    &.guarantee
                        bg-image('guarantee_3')
                    &.special
                        bg-image('special_3')   
    .food-wrapper
        flex:1        
        .goods-title
            padding-left:18px
            height:30px
            line-height :30px
            border-left:2px solid #d9dde1
            font-size :12px
            color: rgb(147 ,153 , 159)
            background :#f3f5f7
        .food-item
            display :flex
            margin:18px
            padding-bottom :20px
            border-1px(rgba(7,17,27,0.1))
            &:last-child
                border-none()
                margin-bottom :0px
            .icon
                flex: 0 0 57px
                margin-right:10px
                border-radius: 3px
                overflow hidden
                img 
                    width:57px
                    height:57px
            .content
                flex:1
                .name
                    margin:1px 0px 8px 0px
                    height:14px
                    line-height :14px
                    font-size:14px
                    color:rgb(7,17,27)
                .desc
                    margin-bottom :8px
                    line-height :12px
                    font-size:10px
                    color:rgb(147,153,159)
                .extra
                    margin-bottom :8px
                    line-height :10px
                    font-size:10px
                    color:rgb(147,153,159)
                    span:nth-child(2)
                        margin-left:6px
                .price
                    font-weight :700
                    line-height :24px
                    .price-now
                        margin-right:8px
                        font-size:14px
                        color:rgb(240,20,20)
                    .price-old
                        text-decoration : line-through
                        font-size:10px
                        color:rgba(7,17,27,0.4)

                .cart
                    position :absolute
                    bottom:12px
                    right:0px
                    